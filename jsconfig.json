{
  "compilerOptions": {
    "checkJs": false,
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@components": ["./src/components/index"],
      "@constants": ["./src/constants/index"],
      "@layouts": ["./src/layouts/index"],
      "@pages": ["./src/pages/index"],
      "@pages/*": ["./src/pages/*"],
      "@routers": ["./src/routers/index"],
      "@routers/*": ["./src/routers/*"],
      "@tools": ["./src/tools/index"],
      "@tools/*": ["./src/tools/*"],
      "@utils": ["./src/utils/index"],
      "@shared": ["./src/shared/index"]
    }
  },
  "exclude": ["node_modules", "public"],
  "include": ["src"]
}
